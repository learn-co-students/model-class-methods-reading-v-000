<h1>Believe It Or Not I'm Blogging On Air</h1>

<!-- Inserts a dropdown and submit tag -->
<div>
  <h3>Filter posts:</h3>
  <%= form_tag("/posts", method: "get") do %>
    <div><%= label_tag "Author" %></div>
    <div><%= select_tag "author_id", options_from_collection_for_select(@authors, "id", "name"), include_blank: true %></div>

    <div><%= label_tag "Post Age" %></div>
    <div><%= select_tag "date", options_for_select(["Today", "Old News"]), include_blank: true %></div>
    <div><%= submit_tag "Filter" %></div>
  <% end %>
</div>

<% @posts.each do |post| %>
  <div>
    <h2><%= post.title %></h2>
    <h3>by: <%= link_to post.author.name, author_path(post.author) %></h3>
    <p><%= post.description %></p>
  </div>
<% end %>
